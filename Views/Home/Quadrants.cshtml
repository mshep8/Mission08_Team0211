@model IEnumerable<Mission08_Team0211.Models.ToDoTask>

<h1 class="mb-4">Stephen Covey Time Management Matrix</h1>

<div class="row">

    <!-- Quadrant 1 -->
    <div class="col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Quadrant 1 — Important / Urgent</h4>
            </div>
            <div class="card-body">
                @foreach (var t in Model.Where(x => x.Quadrant == 1))
                {
                    <div class="border p-2 mb-2">
                        <strong>@t.Task</strong><br />
                        <small>Due: @t.DueDate?.ToShortDateString()</small><br />
                        <small>Category: @t.Category?.CategoryName</small>

                        <div class="mt-2">
                            <a asp-action="Edit" asp-route-id="@t.ToDoTaskId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@t.ToDoTaskId" method="post" style="display:inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this task?');">
                                    Delete
                                </button>
                            </form>                            <form asp-action="Complete" asp-route-id="@t.ToDoTaskId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-success">Complete</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

