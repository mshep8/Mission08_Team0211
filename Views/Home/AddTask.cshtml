@model Task

<h1>Manage your tasks</h1>

@model Mission08_Team0211.Models.ToDoTask

<form method="post">

    <input type="hidden" asp-for="ToDoTaskId" />

    <label asp-for="Task"></label>
    <input asp-for="Task" />
    <br />

    <label asp-for="DueDate"></label>
    <input asp-for="DueDate" type="date" />
    <br />

    <label asp-for="Quadrant"></label>
    <select asp-for="Quadrant">
        <option value="">Select a Quadrant</option>
        <option value="1">Quadrant I (Important / Urgent)</option>
        <option value="2">Quadrant II (Important / Not Urgent)</option>
        <option value="3">Quadrant III (Not Important / Urgent)</option>
        <option value="4">Quadrant IV (Not Important / Not Urgent)</option>
    </select>
    <br />

    <label asp-for="CategoryId"></label>
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (var c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />

    <label asp-for="Completed"></label>
    <select asp-for="Completed">
        <option value="">Select One</option>
        <option value="true">Completed</option>
        <option value="false">Not Completed</option>
    </select>
    <br />

    <button type="submit">Save Task</button>

    <div asp-validation-summary="All"></div>

</form>